                                                </a>
                                                <a href="#"
                                                    class="block px-4 py-2 text-gray-700 hover:bg-gray-100 flex items-center delete-btn">
                                                    <i class="text-red-500 fa-solid fa-trash-can"></i><span
                                                        class="ml-2">Delete</span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
         <!-- main content// -->
    </div>

    <script src="https://kit.fontawesome.com/16de02e9e0.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="js/utils.js"></script>
    <script src="js/fetch.js"></script>

    <script>
        // Pie Chart Configuration
        var pieOptions = {
            chart: {
                type: 'pie',
                width: '100%',
                height: '100%'
            },
            series: [44, 55, 13, 43, 22, 15],
            labels: ['Addressed', 'Cancelled', 'Completed', 'Confirmed', 'In Progress', 'Pending']
        };

        var pieChart = new ApexCharts(document.querySelector("#pie-chart"), pieOptions);
        pieChart.render();

        // Bar Chart Configuration
        var barOptions = {
            chart: {
                type: 'bar',
                width: '100%',
                height: '100%'
            },
            series: [{
                name: 'Sales',
                data: [4, 6, 8]
            }],
            xaxis: {
                categories: ['Event Registration', 'Public Feedback', 'Service Request']
            }
        };

        var barChart = new ApexCharts(document.querySelector("#bar-chart"), barOptions);
        barChart.render();
    </script>


