<%- include("./partials/head.ejs") %>
    </head>

    <body>

        <%- include("./partials/side-nav.ejs") %>

        <div class="content-body">
            <!-- navbar -->
            <div class="navbar">
    
                <!-- Toggle Sidebar Button -->
                <button id="toggleSidebarBtn" class="toggleSidebarBtn">
                    <img src="https://img.icons8.com/material-outlined/24/000000/menu--v1.png" alt="Toggle Sidebar">
                </button>
    
                <!-- Profile -->
                <div class="profile">
                    <button class="user-dropdown-btn" type="">
                        <img class="profile-img"
                            src="https://static.vecteezy.com/system/resources/thumbnails/003/337/584/small/default-avatar-photo-placeholder-profile-icon-vector.jpg"
                            alt="">
                        <h1 class="admin-heading">Admin</h1>
                    </button>
                </div>
    
            </div>
    
            <div class="content">
                <div class="content-title">
                    <h2>Form</h2>
                </div>
                <!-- <h2>title TITLE</h2> -->
                <div class="frame-container">
                    <div class="frame-title">
                        <span>Entity Types</span>
                    </div>
                    <div class="frame-content">
                        <form class="flex flex-wrap gap-y-4">
    
                            <!-- status_types -->
                            <div class="mb-4 w-full sm:w-1/2 lg:w-1/4 px-2">
                                <div class="lms-input-container">
                                    <select id="firstname" class="lms-dropdropdown">
                                        <option value="" disabled selected hidden>Select Entity Type Name</option>
                                        <option value="1">Name 1</option>
                                        <option value="2">Name 2</option>
                                        <option value="3">Name 3</option>
                                        <option value="4">Name 4</option>
                                    </select>
                                    <div class="lms-cut-dropdown"></div>
                                    <label for="firstname" class="lms-placeholder-dropdown">Entity Type
                                        Name<span>*</span></label>
                                </div>
                            </div>
    
                            <div class="mb-4 w-full sm:w-1/2 lg:w-1/4 px-2">
                                <div class="lms-input-container">
                                    <input id="firstname" class="lms-input" type="text" placeholder="" value="">
                                    <label for="firstname" class="lms-placeholder">Description<span>*</span></label>
                                </div>
                            </div>
    
                            <!-- button -->
                            <div class="w-full px-2">
                                <button type="submit"
                                    class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded w-full sm:w-auto">
                                    Add +
                                </button>
                            </div>
    
                        </form>
    
                    </div>
                </div>
    
                <!-- table -->
                <div class="frame-container">
                    <div class="frame-title">
                        <span>Entity Types</span>
                    </div>
                    <div class="frame-content">
                        <div class="mx-auto bg-gray-50 rounded-lg shadow-md">
                            <!-- Table Header -->
                            <div class="flex justify-between items-center px-4 py-3 bg-blue-50 rounded-t-lg">
                                <h2 class="text-lg font-semibold text-gray-700">Status Types Data</h2>
                                <!-- <button class="text-sm font-semibold text-gray-600">02 Document</button> -->
                            </div>
    
                            <!-- Table -->
                            <div class="responsive-table overflow-x-auto">
                                <table class="min-w-full bg-white rounded-b-lg shadow">
                                    <thead class="text-left">
                                        <tr>
                                            <th class="p-4 text-xs font-bold text-center">S.No</th>
                                            <th class="p-4 text-xs font-bold ">Entity Type Name</th>
                                            <th class="p-4 text-xs font-bold ">Description</th>
                                            <th class="p-4 text-xs font-bold text-center">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% enitityTypes.forEach((type, index)=> { %>
                                        <tr class="hover:bg-blue-50">
                                            <td class="p-4 text-sm text-gray-700 text-center font-semibold "><%= index + 1 %></td>
                                            <td class="p-4 text-sm text-gray-700 "><%= type.entity_type %></td>
                                            <td class="p-4 text-sm text-gray-700 "><%= type.description %></td>
                                            <td class="p-4 text-center relative">
                                                <button onclick="toggleDropdown(0)"
                                                    class="focus:outline-none text-gray-600 px-4"><i
                                                        class="fa-solid fa-ellipsis-vertical"></i></button>
    
                                                <!-- Dropdown menu -->
                                                <div id="dropdown-0"
                                                    class="dropdown text-sm hidden absolute bottom-0 right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-10">
                                                    <a href="./view page.html"
                                                        class="block px-4 py-2 text-gray-700 hover:bg-gray-100 flex items-center">
                                                        <i class="text-red-500 fa-solid fa-eye"></i> <span
                                                            class="ml-2">View</span>
                                                    </a>
                                                    <a href="#"
                                                        class="block px-4 py-2 text-gray-700 hover:bg-gray-100 flex items-center">
                                                        <i class="text-red-500 fa-solid fa-pen-to-square"></i> <span
                                                            class="ml-2">Update</span>
                                                    </a>
                                                    <a href="#"
                                                        class="block px-4 py-2 text-gray-700 hover:bg-gray-100 flex items-center delete-btn">
                                                        <i class="text-red-500 fa-solid fa-trash-can"></i><span
                                                            class="ml-2">Delete</span>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
    
                    </div>
                </div>
    
            </div>
        </div>

            <script src="https://kit.fontawesome.com/16de02e9e0.js" crossorigin="anonymous"></script>
            <script src="../js/utils.js"></script>
            <script src="../js/fetch.js"></script>
    </body>
</html>