<div class="table-filter-wrapper mt-3 space-y-6">
  <div class="default-filter flex items-center justify-between">
    <div class="input-group flex items-center">
      <span class="input-group-text mr-2">Show</span>
      <select
        id="row-per-page"
        class="row-per-page form-select border rounded-full px-2 py-1"
      >
        <option value="3">3</option>
        <option value="5">5</option>
        <option value="10">10</option>
        <option value="20">20</option>
        <option value="50">50</option>
      </select>
    </div>
    <!-- REF NO -->
    <div class="filter-wrapper flex items-center gap-2">
      <div
        class="ref-input-filter flex border border-gray-300 rounded-lg overflow-hidden"
      >
        <input
          type="search"
          class="form-control px-4 py-2 focus:outline-none"
          id="search-input"
          placeholder="REF No..."
        />
        <button
          class="btn px-4"
          type="button"
          id="search-btn"
        >
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </div>
      <button
        class="filter-btn btn border border-gray-300 rounded-lg w-11 h-11 flex items-center justify-center"
      >
        <i class="fa-solid fa-filter"></i>
      </button>
    </div>
  </div>

  <div class="filter-options border-b border-gray-300 pb-10 px-4 pt-4">
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4"
    >
      <!-- From Date -->
      <div class="fo-custom-select">
        <label class="block text-sm text-gray-600"
          >From:
          <input
            type="date"
            class="mt-1 w-full border py-2 px-4 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm"
            data-logical-name="fromDate"
          />
        </label>
      </div>
      <!-- To Date -->
      <div class="fo-custom-select">
        <label class="block text-sm text-gray-600"
          >To:
          <input
            type="date"
            class="mt-1 w-full border py-2 px-4 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm"
            data-logical-name="toDate"
          />
        </label>
      </div>
      <!-- Category -->
      <div class="fo-custom-select">
        <label class="block text-sm text-gray-600"
          >Category
          <select
            class="mt-1 w-full border py-2 px-4 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm"
            data-logical-name="serviceBranchLid"
          >
            <option selected disabled></option>
          </select>
        </label>
      </div>
     
      <div class="fo-custom-select">
        <label class="block text-sm text-gray-600"
          >University
          <select
            class="mt-1 w-full border py-2 px-4 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm"
            data-logical-name="serviceBranchLid"
          >
            <option selected disabled></option>
          </select>
        </label>
      </div>
      <!-- Campus -->
      <div class="fo-custom-select">
        <label class="block text-sm text-gray-600"
          >Campus
          <select
            class="mt-1 w-full border py-2 px-4 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm"
            data-logical-name="serviceBranchLid"
          >
            <option selected disabled></option>
          </select>
        </label>
      </div>
      <!-- School -->
      <div class="fo-custom-select">
        <label class="block text-sm text-gray-600"
          >School
          <select
            class="mt-1 w-full border py-2 px-4 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm"
            data-logical-name="serviceBranchLid"
          >
            <option selected disabled></option>
          </select>
        </label>
      </div>
      <!-- Department -->
      <div class="fo-custom-select">
        <label class="block text-sm text-gray-600"
          >Department
          <select
            class="mt-1 w-full border py-2 px-4 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm"
            data-logical-name="serviceBranchLid"
          >
            <option selected disabled></option>
          </select>
        </label>
      </div>
      <!-- Action Buttons -->
      <div class="flex justify-end items-end space-x-2 xl:col-span-1 lg:col-span-2">
        <button
          class="bg-red-600 text-white px-4 py-2 rounded-md shadow hover:bg-red-700 transition"
        >
          Clear
        </button>
        <button
          class="bg-blue-600 text-white px-4 py-2 rounded-md shadow hover:bg-blue-700 transition"
        >
          Apply
        </button>
      </div>
    </div>
  </div>
</div>
